{
  "name": "alsuro-website",
  "version": "1.0.0",
  "description": "ALSURO company website",
  "scripts": {
    "build:css": "postcss assets/css/*.css --dir dist/css --use autoprefixer cssnano",
    "build:js": "terser assets/js/*.js -o dist/js/bundle.min.js",
    "build": "npm run build:css && npm run build:js",
    "watch": "npm-watch"
  },
  "watch": {
    "build:css": {
      "patterns": ["assets/css"],
      "extensions": "css"
    },
    "build:js": {
      "patterns": ["assets/js"],
      "extensions": "js"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "npm-watch": "^0.11.0",
    "postcss-cli": "^10.1.0",
    "terser": "^5.19.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
} 